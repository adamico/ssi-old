<section class="home">
  <% if @school -%>
    <article id="next_school">
      <h3><%= link_to @school.title, program_path %></h3>
      <h2><%= @school.theme %></h2>
      <h3 class='school_when_where'><%= @school.when_and_where %></h3>
    </article>
  <% else -%>
    <h2>No school registered in database, yet.</h2>
  <% end -%>
</section>
