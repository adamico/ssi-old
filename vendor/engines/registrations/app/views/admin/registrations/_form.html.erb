<%= form_for [:admin, @registration] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @registration,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :surname -%>
    <%= f.text_field :surname, :class => 'larger widest'  -%>
  </div>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name  -%>
  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title  -%>
  </div>
  
  <div class='field'>
    <%= f.label :company -%>
    <%= f.text_field :company  -%>
  </div>
  
  <div class='field'>
    <%= f.label :address -%>
    <%= f.text_field :address  -%>
  </div>
  
  <div class='field'>
    <%= f.label :city -%>
    <%= f.text_field :city  -%>
  </div>
  
  <div class='field'>
    <%= f.label :zip -%>
    <%= f.text_field :zip  -%>
  </div>
  
  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country  -%>
  </div>
  
  <div class='field'>
    <%= f.label :phone -%>
    <%= f.text_field :phone  -%>
  </div>
  
  <div class='field'>
    <%= f.label :fax -%>
    <%= f.text_field :fax  -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email  -%>
  </div>
  
  <div class='field'>
    <%= f.label :arrival -%>
    <%= f.date_select :arrival  -%>
  </div>
  
  <div class='field'>
    <%= f.label :departure -%>
    <%= f.date_select :departure  -%>
  </div>
  
  <div class='field'>
    <%= f.label :accompagne -%>
    <%= f.text_field :accompagne  -%>
  </div>
  
  <div class='field'>
    <%= f.label :payment_id -%>
    <%= f.collection_select :payment_id, Payment.all, :id, :name, :include_blank => true -%>
  </div>
  
  <div class='field'>
    <%= f.label :state -%>
    <%= f.collection_select :state_event, @registration.state_transitions, :event, :human_to_name, :include_blank => @registration.human_state_name  -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.registrations.registration'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @registration.surname)
              } %>
<% end -%>
