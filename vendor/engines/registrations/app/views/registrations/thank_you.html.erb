<% content_for :body_content_left do %>
  <p>Thank you for registering, Dear <strong><%= @registration.title_with_name %></strong>.</p>
  <p>This registration has been filed with the <strong>number #<%= @registration.id %></strong>.</p>
  <% case @registration.payment_name
    when "check" -%>
    <%= render 'check' %>
  <% when "bank transfer" -%>
    <%= render 'bank_transfer' %>
  <% else %>
    <%= render 'paybox' %>
  <% end -%>
  <%= raw @page[:body] %>
<% end -%>

<%= render :partial => "/shared/content_page" %>
