<% content_for :body_content_left do %>
  <div class='registrations'>
    <%=raw @page.content_for(Page.default_parts.first.to_sym) %>

    <%= form_for @registration do |f| %>
      <%= render :partial => "/shared/admin/error_messages",
                 :locals => {
                   :object => @registration,
                   :include_object_name => true
                 } %>
      <div class='field'>
        <%= f.required_label :surname %>
        <%= f.text_field :surname %>
      </div>
      <div class='field'>
        <%= f.required_label :first_name %>
        <%= f.text_field :first_name %>
      </div>
      <div class='field'>
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class='field'>
        <%= f.required_label :company %>
        <%= f.text_field :company %>
      </div>
      <div class='field'>
        <%= f.required_label :address %>
        <%= f.text_field :address %>
      </div>
      <div class='field inline'>
        <%= f.required_label :city %>
        <%= f.text_field :city %>
      </div>
      <div class='field inline'>
        <%= f.required_label :zip %>
        <%= f.text_field :zip %>
      </div>
      <div class='field'>
        <%= f.required_label :country %>
        <%= f.text_field :country %>
      </div>
      <div class='field'>
        <%= f.required_label :phone %>
        <%= f.text_field :phone %>
      </div>
      <div class='field'>
        <%= f.label :fax %>
        <%= f.text_field :fax %>
      </div>
      <div class='field'>
        <%= f.required_label :email %>
        <%= f.text_field :email %>
      </div>
      <div class='field'>
        <%= f.required_label :arrival %>
        <%= f.date_select :arrival %>
      </div>
      <div class='field'>
        <%= f.required_label :departure %>
        <%= f.date_select :departure %>
      </div>
      <div class='field'>
        <%= f.label :accompagne, "Accompanying person" %>
        <%= f.text_field :accompagne %>
      </div>
      <div class='field'>
        <%= f.label :payment_id, "Payment by:" %>
        <%= f.collection_select :payment_id, Payment.all, :id, :name %>
      <%# Add captcha -%>
      <div class='actions'>
        <%= f.submit t('.send') %>
        <%= link_to t('.privacy_policy'), "/pages/privacy-policy", :id => "privacy_link" if RefinerySetting.find_or_set(:show_contact_privacy_link, false) %>
      </div>
    <% end %>
  </div>
<% end %>
<%= render :partial => "/shared/content_page" %>

