<% content_for :javascript_libraries do %>
  <script src="http://www.google.com/jsapi"></script>
  <script type="text/javascript" src='http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclusterer/1.0/src/markerclusterer.js'></script>
  <%= javascript_include_tag 'jquery-min', 'jquery-ui-custom-min', 'programme_tabs', 'gmaps4rails' %>
  <script type="text/javascript" charset="utf-8">
    var styles = [{
      url: 'http://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclusterer/1.0/images/people35.png',
      height: 35,
      width: 35,
      opt_anchor: [16, 0],
      opt_textColor: '#ff00ff',
      opt_textSize: 10
    }];
    <% options.each do |key, value| %>
    Gmaps4Rails.<%= key %> = <%=raw value.is_a?(String) ?  "'#{value}'" : value  %>;
    <% end %>	
    var builder = <%=raw options["processing"] == "json" ? builder : "'#{builder}'" %>;
    Gmaps4Rails.initialize(builder);
  </script>
<% end %>

<% content_for :stylesheets do -%>
  <%= stylesheet_link_tag 'jquery-ui', 'gmaps4rails' %>
<% end -%>

<% if @school -%>
  <% content_for :title do -%>
    <%= @school.title %>
  <% end -%>

  <% content_for :body_content_title do %>
    <%= @school.title %>
  <% end %>

  <% content_for :body_content_left do %>
    <section id="school_theme">
      <p><%= @school.theme %></p>
      <p><%= @school.sub_theme %></p>
    </section>
    <section>
      <p><%= @school.place %> - <%= @school.period %></p>
    </section>
    <section>
      <%= gmaps4rails(@location) %>
    </section>
    <section>
      <p><%= @school.organiser %></p>
      <p><%= @school.sub_organiser %></p>
    </section>
    <section>
      <p><%=raw @school.award %></p>
    </section>
    <section>
      <p><%=raw @school.intro_program %></p>
    </section>
    <section>
      <p><%=raw @school.publication %></p>
    </section>
    <section id="programme">
      <% if @events_days.any? -%>
        <ul>
          <% @events_days.each do |day, events| -%>
            <li><%= link_to day.strftime("%A %e"), "#programme-#{day.day}" %></li>
          <% end -%>
        </ul>
        <% @events_days.each do |day, events| -%>
          <div id="programme-<%= day.day %>">
            <ul class="events">
              <% events.each do |event| -%>
                <li>
                  <span class="event_when"><%= event.time %></span>
                   - 
                  <span class="event title"><%= event.title %></span>
                   : 
                  <span class="event speaker"><%= event.speaker %></span>
                </li>
              <% end -%>
            </ul>
          </div>
        <% end -%>
      <% else %>
        No programmed events yet.
      <% end -%>
    </section>
    <p>Placeholder for print programme link</p>
  <% end %>
<% else -%>
  No next school found.
<% end -%>

<%= render :partial => "/shared/content_page" %>
