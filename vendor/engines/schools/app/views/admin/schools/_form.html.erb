<%= form_for [:admin, @school] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @school,
          :include_object_name => true
        } %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest'  -%>
  </div>

  <div class='field'>
    <%= f.label :starts_at -%>
    <%= f.date_select :starts_at  -%>
  </div>

  <div class='field'>
    <%= f.label :ends_at -%>
    <%= f.date_select :ends_at  -%>
  </div>

  <div class='field'>
    <%= f.label :place -%>
    <%= f.text_field :place  -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location  -%>
  </div>

  <div class='field'>
    <%= f.label :vignlieu -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
          :f => f,
          :field => :vignlieu_id,
          :image => @school.vignlieu,
          :toggle_image_display => false
        } %>

  <div class='field'>
    <%= f.label :price -%>
    <%= f.text_field :price  -%>
  </div>

  <div class='field'>
    <%= f.label :deadline -%>
    <%= f.date_select :deadline  -%>
  </div>

  <div class='field'>
    <div id='page-tabs' class='clearfix ui-tabs ui-widget ui-widget-content ui-corner-all'>
      <ul id='page_parts'>
        <% [:extranight, :award, :intro_program, :publication].each_with_index do |part, part_index| %>
          <li class='ui-state-default<%= ' ui-state-active' if part_index == 0 %>'>
            <%= link_to part.to_s.titleize, "##{part}" %>
          </li>
        <% end %>
      </ul>

      <div id='page_part_editors'>
        <% [:extranight, :award, :intro_program, :publication].each do |part| %>
          <div class='page_part' id='<%= part %>'>
            <%= f.text_area part, :rows => 20, :class => 'wymeditor widest' -%>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class='field'>
    <%= f.label :theme -%>
    <%= f.text_field :theme  -%>
  </div>

  <div class='field'>
    <%= f.label :sub_theme -%>
    <%= f.text_field :sub_theme  -%>
  </div>

  <div class='field'>
    <%= f.label :organiser -%>
    <%= f.text_field :organiser  -%>
  </div>

  <div class='field'>
    <%= f.label :sub_organiser -%>
    <%= f.text_field :sub_organiser  -%>
  </div>

  <div class='field'>
    <%= f.label :state -%>
    <%= f.text_field :state  -%>
  </div>

  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.schools.school'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @school.title)
              } %>
<% end -%>
<% content_for :javascripts do %>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end %>
