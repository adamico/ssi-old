<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(link_category) -%>">
  <span class='title'>
    <%= link_category.title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_link_category_path(link_category),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_link_category_path(link_category),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => link_category.title),
        :method => :delete %>
  </span>
</li>
