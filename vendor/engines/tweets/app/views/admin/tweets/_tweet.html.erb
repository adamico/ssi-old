<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(tweet) -%>">
  <span class='title'>
    <%= tweet.truncated_body %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("delete.png"), admin_tweet_path(tweet),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => tweet.truncated_body),
        :method => :delete %>
  </span>
</li>
