<% content_for :body_content_title do %>
  <%= @tweet.title %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Body</h1>
    <p>
      <%=raw @tweet.body %>
    </p>
  </section>
  <section>
    <h1>Status</h1>
    <p>
      <%=raw @tweet.status_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="tweets">
      <% @tweets.each do |tweet| %>
        <li>
          <%= link_to tweet.title, tweet_path(tweet) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
